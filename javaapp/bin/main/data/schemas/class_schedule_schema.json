  "description": "Schema for validating class schedule data",
  "type": "object",
  "properties": {
    "0": {
      "type": "array",
      "description": "Sunday classes",
      "items": {
        "type": "object",
        "required": ["class_name", "time_slot"],
        "properties": {
          "class_name": {
            "type": "string",
            "enum": [
              "Power Control",
              "History of Powers",
              "Combat Training",
              "Ethics",
              "Science",
              "Club Activities",
              "Power Theory",
              "Mathematics",
              "Physical Education",
              "Literature",
              "Power Applications",
              "Social Studies",
              "Elective",
              "Free Study"
            ]
          },
          "time_slot": {
            "type": "string",
            "pattern": "^([0-1]?[0-9]|2[0-3]):[0-5][0-9]$",
            "description": "Time slot in 24-hour format (HH:MM)"
          },
          "room": {
            "type": "string",
            "minLength": 1
          },
          "teacher": {
            "type": "string",
            "minLength": 1
          }
